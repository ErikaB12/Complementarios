@model Petalos.Models.Datosflores
@{
    Layout = "_Layout";
}
<h2 class="titulo">Agregar una nueva flor</h2>
<form method="post" action="~/Admin/Admin/AgregarFlor">
    <label>Nombre:</label><input type="text" name="Nombre" /><br />
    <label>Nombre Cientifico:</label><input type="text" name="Nombrecientifico"/><br />
    <label>Nombre Común:</label><input type="text" name="Nombrecomun"/><br />
    <label>Origen:</label><input type="text" name="Origen"/><br />
    <label>Descripción:</label><textarea rows="5" name="Descripcion"></textarea><br />
    <p>@Html.ValidationSummary()</p>
    <input type="submit" value="Agregar" />
    <a href="~/Admin/">
        <input type="button" value="Cancelar" />
    </a>
</form>

<div id="popErrores" class="popup" runat="server">
    <div>
        <h1>Ha ocurrido un error:</h1>
        <p id="mensajeError"></p>
        <input type="button" value="Aceptar" />
    </div>
</div>
