@model Petalos.Models.Datosflores
@{
    Layout = "_Layout";
}

<h2 class="titulo">Agregar imagenes a una flor</h2>

<form method="post" action="~/Admin/Admin/AgregarImagenes" enctype="multipart/form-data">
    <input type="hidden" value="@Model.Idflor"/>
    <label>Flor:</label><input type="text" value="@Model.Nombre" readonly="readonly" /><br />
    <label>Archivo:</label><input type="file" name="archivito" accept=".jpg"/><br />
    <p>@Html.ValidationSummary()</p>
    <input type="submit" value="Agregar" />
    <a href="~/Admin/">
        <input type="button" value="Cancelar" />
    </a>
</form>

<div class="listaImagenes">
    <ul>
        @foreach (var imagen in Model.Imagenesflores)
        {
            <li>
                <img src="~/images/@imagen.Nombreimagen"/>
                <a href="~/Admin/Admin/EliminarImagenes/@imagen.Idflor">Eliminar</a>
            </li>
        }
    </ul>
</div>

<div id="popErrores" class="popup" runat="server">
    <div>
        <h1>Ha ocurrido un error:</h1>
        <p id="mensajeError">Aqui va el mensaje de error</p>
        <input type="button" value="OK" />
    </div>
</div>


<div id="popConfirmacion" class="popup">
    <div>
        <h1>Por favor confirme:</h1>
        <p id="mensajeConfirmacion">Aqui va el mensaje de error</p>
        <input type="submit" value="Si" />
        <input type="button" value="No" />
    </div>
</div>



